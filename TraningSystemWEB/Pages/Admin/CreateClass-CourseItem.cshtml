@using XTLAB
@model List<Course>
<div class="row">
    <div class="row col-lg-12 ">
        <label class="col-lg-6">Khoá học</label>
        <label class="col-lg-2">Ngày bắt đầu</label>
        <label class="col-lg-2">Ngày kết thúc</label>
        <label class="col-lg-2">Hình thức</label>
    </div>
    <div class="select-style-1 row col-lg-12">
        <div class="col-lg-6 select-position">
            <select>
                @foreach(var course in Model)
                {
                    <option value="@course.CourseID">@course.CourseName</option>
                }
            </select>
        </div>
        <div class=" col-lg-2 input-style-1">
            <input type="date" />
        </div>
        <!-- end input -->
        <div class=" col-lg-2 input-style-1">
            <input type="date" />
        </div>

        <div class="col-lg-1 form-check form-switch toggle-switch mb-30">
            <input class="form-check-input"
                   type="checkbox"
                   id="toggleSwitch1" />
            <label class="form-check-label" for="toggleSwitch1">Online</label>
        </div>
        <!-- end input -->
    </div>
</div>